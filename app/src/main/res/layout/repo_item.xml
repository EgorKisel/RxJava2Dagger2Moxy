<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_user_padding">

    <TextView
        android:id="@+id/nameRepo"
        android:textSize="@dimen/repo_item_text_size"
        android:layout_width="wrap_content"
        tools:text="Name"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateCreating"
        android:textSize="@dimen/repo_item_text_size"
        android:layout_width="wrap_content"
        tools:text="Date"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/repo_item_view_layout_height"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/nameRepo"
        tools:layout_editor_absoluteX="@dimen/item_user_padding" />
</androidx.constraintlayout.widget.ConstraintLayout>